<launch>
    <!-- Launch the location listener node -->
    <node pkg="swarm_controller" 
          type="external_location_listener_node.py" 
          name="location_listener" 
          output="screen">
        <!-- Set the external ROS master for the listener node -->
        <env name="ROS_MASTER_URI" value="http://external_ros_master:11311" /> <!-- Replace with actual external ROS_MASTER_URI -->
    </node>

    <!-- Launch the location sender node -->
    <node pkg="swarm_controller" 
          type="local_location_sender_node.py" 
          name="location_sender" 
          output="screen">
        <!-- Set the local ROS master for the sender node -->
        <env name="ROS_MASTER_URI" value="http://localhost:11311" /> <!-- Local ROS_MASTER_URI -->
    </node>
</launch>
